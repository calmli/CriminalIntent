<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_checkbox_solved"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_text_view_crime_title"
        android:layout_toLeftOf="@id/list_item_checkbox_solved"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_text_view_crime_date"
        android:padding="4dp"
        android:layout_toLeftOf="@id/list_item_checkbox_solved"
        android:layout_below="@id/list_item_text_view_crime_title" />
</RelativeLayout>
